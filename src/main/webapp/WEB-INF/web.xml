<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>dbUser</param-name>
        <param-value>root</param-value>
    </context-param>
    <context-param>
        <param-name>dbPass</param-name>
        <param-value>root</param-value>
    </context-param>
    <filter>
        <filter-name>AuthFilter</filter-name>
        <filter-class>fr.m2i.javawebapp.filter.AuthFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthFilter</filter-name>
        <url-pattern>/HomeServlet</url-pattern>
    </filter-mapping>
    <listener>
        <description>ServletContextListener</description>
        <listener-class>fr.m2i.javawebapp.listener.LifecycleListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>FirstServlet</servlet-name>
        <servlet-class>fr.m2i.javawebapp.FirstServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SecondServlet</servlet-name>
        <servlet-class>fr.m2i.javawebapp.SecondServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShowIPAddressServlet</servlet-name>
        <servlet-class>fr.m2i.javawebapp.ShowIPAddressServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShowRequestHeaders</servlet-name>
        <servlet-class>fr.m2i.javawebapp.ShowRequestHeaders</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EvenNumberServlet</servlet-name>
        <servlet-class>fr.m2i.javawebapp.EvenNumberServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CountWordsServlet</servlet-name>
        <servlet-class>fr.m2i.javawebapp.CountWordsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PrimeNumberServlet</servlet-name>
        <servlet-class>fr.m2i.javawebapp.PrimeNumberServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DistributorServlet</servlet-name>
        <servlet-class>fr.m2i.javawebapp.DistributorServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>fr.m2i.javawebapp.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>fr.m2i.javawebapp.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HomeServlet</servlet-name>
        <servlet-class>fr.m2i.javawebapp.HomeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FirstServlet</servlet-name>
        <url-pattern>/FirstServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SecondServlet</servlet-name>
        <url-pattern>/SecondServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShowIPAddressServlet</servlet-name>
        <url-pattern>/ShowIPAddressServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShowRequestHeaders</servlet-name>
        <url-pattern>/ShowRequestHeaders</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EvenNumberServlet</servlet-name>
        <url-pattern>/EvenNumberServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CountWordsServlet</servlet-name>
        <url-pattern>/CountWordsServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PrimeNumberServlet</servlet-name>
        <url-pattern>/PrimeNumberServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DistributorServlet</servlet-name>
        <url-pattern>/DistributorServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/LogoutServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HomeServlet</servlet-name>
        <url-pattern>/HomeServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
